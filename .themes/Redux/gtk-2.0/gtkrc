style "pixmap-statusbar" = "default"
{
	ythickness = 3
	xthickness = 3

    engine "pixmap"
    {
        image
        {
            function = RESIZE_GRIP
            recolorable = TRUE
            detail = "statusbar"
            overlay_file = "Handles/resize-grip.png"
            overlay_border = {0,0,0,0}
            overlay_stretch = TRUE
        }
    }
}

