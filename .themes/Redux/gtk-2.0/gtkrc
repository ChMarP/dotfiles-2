style "menubar" = "dark"
{
	# Static dark color so continuity doesn't break with toolbars
	# when color changes
	bg[NORMAL] = "#6B584A"
	engine "pixmap"
	{
		image {
	  		function = BOX
	  		file = "menubar.png"
	  		#border = {1,1,1,1}
	  		stretch = TRUE
	  	}
	  	image {
		      function				= HANDLE
		      overlay_file			= "handlebox.png"
		      overlay_stretch 	= FALSE
		      orientation			= HORIZONTAL
		}
        	image {
		      function				= HANDLE
		      overlay_file			= "handlebox.png"
		      overlay_stretch 	= FALSE
		      orientation			= VERTICAL
		}
    }
}
		
